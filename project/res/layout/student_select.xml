<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout1"
		android:orientation="horizontal"
		android:layout_marginBottom="30dp">
		<Button
            android:id="@+id/student_overview_bCreateStudent"
            android:text="Create New Student"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"></Button>
		<EditText
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:inputType="text"
			android:imeOptions="actionDone"
			android:id="@+id/et_searchStudent"
			android:hint="Search student"></EditText>
		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Reset Search"
			android:id="@+id/student_overview_bResetSearch"
			android:onClick="onMyButtonClick"></Button>
	</LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/student_select_bAddStudentsToCourse"
            android:text="Add Students To Course"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"></Button>
        <Button
            android:id="@+id/student_select_bCancelOperation"
            android:text="Cancel Operation"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"></Button>
    </LinearLayout>
	<ListView
		android:id="@android:id/list"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:background="#ffececec"/>
	<!-- 
	<TextView 
        android:id="@id/android:empty" 
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:textSize="23dp"
        android:gravity="center"
        android:text="All students are already in this course. You can create new students." />
    -->
</LinearLayout>
