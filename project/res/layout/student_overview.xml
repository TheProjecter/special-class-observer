<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout1"
		android:orientation="horizontal">
		<Button
            android:id="@+id/student_overview_bAddStudent"
            android:text="Add Student"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="23dp"></Button>
		<EditText
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:inputType="text"
			android:imeOptions="actionDone"
			android:id="@+id/et_searchStudent"
			android:hint="Search student"
			android:textSize="23dp"></EditText>
		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Reset Search"
			android:id="@+id/student_overview_bResetSearch"
			android:onClick="onMyButtonClick"
			android:textSize="23dp"></Button>
		<!-- <Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Back to Course List"
			android:id="@+id/student_overview_bBack"
			android:textSize="23dp"></Button> -->
	</LinearLayout>
	<ListView
		android:layout_height="wrap_content"
		android:id="@android:id/list"
		android:layout_width="fill_parent"></ListView>
</LinearLayout>
